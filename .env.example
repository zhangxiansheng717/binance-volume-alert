# ========== Telegram配置（必需） ==========
TELEGRAM_BOT_TOKEN=你的机器人Token
TELEGRAM_CHAT_ID=你的聊天ID

# ========== 代理配置（可选，中国大陆用户需要） ==========
USE_PROXY=false
PROXY_HOST=127.0.0.1
PROXY_PORT=10809

# ========== 多时间周期监控配置 ==========
# 是否启用多时间周期监控（默认启用）
ENABLE_MULTI_TIMEFRAME=true

# 各时间周期的开关（默认全部启用，设置为false可关闭特定周期）
ENABLE_15M=true
ENABLE_1H=true
ENABLE_4H=true
ENABLE_1D=true

# ========== 5分钟周期配置 ==========
VOLUME_THRESHOLD_5M=2
MIN_QUOTE_VOLUME_5M=100000

# ========== 15分钟周期配置 ==========
VOLUME_THRESHOLD_15M=2.5
MIN_QUOTE_VOLUME_15M=300000

# ========== 1小时周期配置 ==========
VOLUME_THRESHOLD_1H=3
MIN_QUOTE_VOLUME_1H=1000000

# ========== 4小时周期配置 ==========
VOLUME_THRESHOLD_4H=4
MIN_QUOTE_VOLUME_4H=5000000

# ========== 1日周期配置 ==========
VOLUME_THRESHOLD_1D=5
MIN_QUOTE_VOLUME_1D=10000000

# ========== 通用配置 ==========
# 最小价格变化百分比（所有时间周期共用）
MIN_PRICE_CHANGE=0.1

# ========== 向后兼容配置（单一时间周期模式） ==========
# 仅当 ENABLE_MULTI_TIMEFRAME=false 时使用以下配置
# 单一模式固定监控5分钟周期，在每个5分钟周期的第3秒检查
VOLUME_THRESHOLD=2
MIN_QUOTE_VOLUME=100000

# ========== 币安API配置（可选，仅在需要访问私有API时需要） ==========
# BINANCE_API_KEY=your_api_key_here 
# BINANCE_API_SECRET=your_api_secret_here 